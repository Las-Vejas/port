---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
// import profileImage from '../assets/me.jpeg'; --- IGNORE ---
---

<Layout title="Vejas">
	<Navigation />

	<header class="hero">
		<div class="hero-content">
			<div class="intro">
				<h1 class="animate-fade-in">Student.<br/>Keyboard enthusiast.<br/>Vibecoder.</h1>
				<p class="bio animate-fade-in delay-2">
					My name is Vejas, and I'm a student in Luxembourg that likes to fiddle around with websites, 
					keyboards and inhale a lot of solder smoke.
				</p>
			</div>
			<div class="photo-frame animate-fade-in delay-3">
				<img src="" alt="Vejas" />
			</div>
		</div>
	</header>

	<section class="work">
		<div class="section-header">
			<h2>My Work</h2>
			<p>Projects I've worked on</p>
		</div>

		<div class="projects">
			<a href="/projects/wind16" class="project animate-fade-in delay-1">
				<div class="project-content">
					<h3>wind16</h3>
					<p>A 16-key, 4x4 macropad with backlighting and QMK support</p>
				</div>
				<div class="project-meta">
					<span class="arrow">→</span>
				</div>
			</a>

			<a href="/projects/portfolio" class="project animate-fade-in delay-2">
				<div class="project-content">
					<h3>Portfolio Website</h3>
					<p>A modern, responsive portfolio built with Astro and deployed on Vercel</p>
				</div>
				<div class="project-meta">
					<span class="arrow">→</span>
				</div>
			</a>
		</div>
	</section>

	<Footer />
</Layout>

<style>
	.hero {
		margin: 4rem 0;
	}

	.hero-content {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.intro {
		max-width: 45rem;
		flex: 1;
	}

	.photo-frame {
		width: 300px;
		height: 300px;
		border-radius: 50%;
		border: 3px solid var(--border);
		background-color: var(--surface);
		margin-left: ;
		display: flex;
		align-items: center;
		justify-content: center;
		flex-shrink: 0;
		overflow: hidden;
		position: relative;
	}

	.photo-frame::before {
		content: 'Photo';
		color: var(--text-secondary);
		font-size: 1rem;
		opacity: 0.5;
		position: absolute;
	}

	.photo-frame:has(img)::before {
		display: ;
	}

	.photo-frame img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		border-radius: 50%;
	}

	h1 {
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 600;
		line-height: 1.1;
		margin-bottom: 2rem;
		margin-right: ;
		background: linear-gradient(to right, var(--text), var(--text-secondary));
		-webkit-background-clip: text;
		color: transparent;
	}

	.bio {
		font-size: 1.25rem;
		max-width: 32rem;
		color: var(--text-secondary);
	}

	.section-header {
		margin-bottom: 3rem;
	}

	.section-header h2 {
		font-size: 1.5rem;
		margin-bottom: 0.5rem;
	}

	.section-header p {
		color: var(--text-secondary);
	}

	.projects {
		display: flex;
		flex-direction: column;
		gap: 1px;
		background-color: var(--border);
		border-radius: 1rem;
		overflow: hidden;
	}

	.project {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 2rem;
		background-color: var(--background);
		transition: background-color 0.2s ease;
	}

	.project:hover {
		background-color: var(--card-bg);
	}

	.project-content h3 {
		font-size: 1.25rem;
		margin-bottom: 0.5rem;
	}

	.project-content p {
		color: var(--text-secondary);
	}

	.arrow {
		font-size: 1.5rem;
		opacity: 0;
		transform: translateX(-10px);
		transition: all 0.2s ease;
	}

	.project:hover .arrow {
		opacity: 1;
		transform: translateX(0);
	}

	footer {
		margin: 8rem 0 4rem;
	}

	.connect h2 {
		font-size: 1.5rem;
		margin-bottom: 1rem;
	}

	.social-links {
		display: flex;
		gap: 2rem;
	}

	.social-links a {
		color: var(--text-secondary);
	}

	@media (max-width: 768px) {
		.hero {
			margin: 4rem 0;
		}

		.hero-content {
			flex-direction: column;
			gap: 2rem;
		}

		.photo-frame {
			width: 200px;
			height: 200px;
		}

		h1 {
			font-size: 2.5rem;
		}

		.bio {
			font-size: 1.125rem;
		}

		.project {
			padding: 1.5rem;
		}
	}
</style>
</style>
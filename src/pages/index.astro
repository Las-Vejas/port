---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Vejas">
	<Navigation />

	<header class="hero">
		<div class="intro">
			<h1 class="animate-slide-in">Student.<br/>Keyboard enthusiast.<br/>Vibecoder.</h1>
			<p class="bio animate-fade-in delay-2">
				I create elegant solutions through code and design,
				focusing on user experience and clean architecture.
			</p>
		</div>
	</header>

	<section class="work">
		<div class="section-header">
			<h2>Selected Work</h2>
			<p>Projects I've worked on</p>
		</div>

		<div class="projects">
			<a href="#" class="project animate-fade-in delay-1">
				<div class="project-content">
					<h3>Project One</h3>
					<p>A description of your first major project and its impact</p>
				</div>
				<div class="project-meta">
					<span class="arrow">→</span>
				</div>
			</a>

			<a href="#" class="project animate-fade-in delay-2">
				<div class="project-content">
					<h3>Project Two</h3>
					<p>Another significant project showcasing your skills</p>
				</div>
				<div class="project-meta">
					<span class="arrow">→</span>
				</div>
			</a>
		</div>
	</section>

	<Footer />
</Layout>

<style>
	.hero {
		margin: 8rem 0;
	}

	.intro {
		max-width: 45rem;
	}

	h1 {
		font-size: clamp(2.5rem, 5vw, 4rem);
		font-weight: 600;
		line-height: 1.1;
		margin-bottom: 2rem;
		background: linear-gradient(to right, var(--text), var(--text-secondary));
		-webkit-background-clip: text;
		color: transparent;
	}

	.bio {
		font-size: 1.25rem;
		max-width: 32rem;
		color: var(--text-secondary);
	}

	.section-header {
		margin-bottom: 3rem;
	}

	.section-header h2 {
		font-size: 1.5rem;
		margin-bottom: 0.5rem;
	}

	.section-header p {
		color: var(--text-secondary);
	}

	.projects {
		display: flex;
		flex-direction: column;
		gap: 1px;
		background-color: var(--border);
		border-radius: 1rem;
		overflow: hidden;
	}

	.project {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 2rem;
		background-color: var(--background);
		transition: background-color 0.2s ease;
	}

	.project:hover {
		background-color: var(--card-bg);
	}

	.project-content h3 {
		font-size: 1.25rem;
		margin-bottom: 0.5rem;
	}

	.project-content p {
		color: var(--text-secondary);
	}

	.arrow {
		font-size: 1.5rem;
		opacity: 0;
		transform: translateX(-10px);
		transition: all 0.2s ease;
	}

	.project:hover .arrow {
		opacity: 1;
		transform: translateX(0);
	}

	footer {
		margin: 8rem 0 4rem;
	}

	.connect h2 {
		font-size: 1.5rem;
		margin-bottom: 1rem;
	}

	.social-links {
		display: flex;
		gap: 2rem;
	}

	.social-links a {
		color: var(--text-secondary);
	}

	@media (max-width: 768px) {
		.hero {
			margin: 4rem 0;
		}

		h1 {
			font-size: 2.5rem;
		}

		.bio {
			font-size: 1.125rem;
		}

		.project {
			padding: 1.5rem;
		}
	}
</style>
</style>
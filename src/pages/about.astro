---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Hero from '../components/Hero.astro';
import SectionHeader from '../components/SectionHeader.astro';
import Footer from '../components/Footer.astro';
import InfoCard from '../components/InfoCard.astro';

const pageTitle = 'About Me';

const identity = {
  firstName: "Vejas",
  country: "Luxembourg",
  occupation: "Student",
  hobbies: ["making custom keyboards", "piano", "swimming"],
};

const skills = ["HTML", "CSS", "School"];
---

<Layout title={pageTitle}>
    <Navigation />
    
    <Hero 
        title="About Me"
        description={`Student and keyboard enthusiast based in ${identity.country}, passionate about technology and creating elegant solutions.`}
    />

    <section class="content">
        <SectionHeader 
            title="Skills & Interests"
            subtitle="What I bring to the table"
        />

        <div class="info-grid">
            <InfoCard
                title="Skills"
                items={skills}
                delay={1}
            />
            <InfoCard
                title="Hobbies"
                items={identity.hobbies}
                delay={2}
            />
        </div>
    </section>

    <Footer />
</Layout>

<style>
    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-bottom: 4rem;
    }

    @media (max-width: 768px) {
        .info-grid {
            grid-template-columns: 1fr;
        }
    }


    .info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin-bottom: 4rem;
    }

    .info-card {
        padding: 2rem;
        background-color: var(--card-bg);
        border-radius: 1rem;
        transition: transform 0.2s ease;
    }

    .info-card:hover {
        transform: translateY(-10px);
    }

    .info-card h3 {
        font-size: 1.25rem;
        margin-bottom: 1rem;
        color: var(--text);
    }

    .info-card ul {
        list-style: none;
        padding: 0;
    }

    .info-card li {
        color: var(--text-secondary);
        margin-bottom: 0.5rem;
    }

    footer {
        margin: 8rem 0 4rem;
    }

    .connect h2 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }

    .social-links {
        display: flex;
        gap: 2rem;
    }

    .social-links a {
        color: var(--text-secondary);
    }

    @media (max-width: 768px) {
        .hero {
            margin: 4rem 0;
        }

        h1 {
            font-size: 2.5rem;
        }

        .bio {
            font-size: 1.125rem;
        }

        .info-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

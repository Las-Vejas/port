---
interface Props {
    title: string;
    description: string;
    date: string;
    url: string;
}

const { title, description, date, url } = Astro.props;
---

<a href={url} class="post-card animate-fade-in">
    <div class="post-content">
        <span class="post-date">{date}</span>
        <h3>{title}</h3>
        <p>{description}</p>
    </div>
    <div class="post-meta">
        <span class="arrow">â†’</span>
    </div>
</a>

<style>
    .post-card {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 2rem;
        background-color: var(--background);
        transition: background-color 0.2s ease;
    }

    .post-card:hover {
        background-color: var(--card-bg);
    }

    .post-content h3 {
        font-size: 1.25rem;
        margin: 0.5rem 0;
    }

    .post-content p {
        color: var(--text-secondary);
    }

    .post-date {
        font-size: 0.875rem;
        color: var(--text-secondary);
        opacity: 0.8;
    }

    .arrow {
        font-size: 1.5rem;
        opacity: 0;
        transform: translateX(-10px);
        transition: all 0.2s ease;
    }

    .post-card:hover .arrow {
        opacity: 1;
        transform: translateX(0);
    }

    @media (max-width: 768px) {
        .post-card {
            padding: 1.5rem;
        }
    }
</style>
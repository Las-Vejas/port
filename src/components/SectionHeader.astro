---
interface Props {
    title: string;
    subtitle: string;
}

const { title, subtitle } = Astro.props;
---

<div class="section-header">
    <h2>{title}</h2>
    <p>{subtitle}</p>
</div>

<style>
    .section-header {
        margin-bottom: 3rem;
    }

    .section-header h2 {
        font-size: 1.5rem;
        margin-bottom: 0.5rem;
    }

    .section-header p {
        color: var(--text-secondary);
    }
</style>